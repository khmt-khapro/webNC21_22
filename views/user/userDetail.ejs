<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>WEB VÍ ĐIỆN TỬ</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Trang quản lí</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body data-spy="scroll" data-target="#myScrollspy">
  <div class="user-home-page">
    <%- include('./menu'); %>
    <!-- user detail-->
    <div class=" rounded bg-white mt-5 mb-5 admin-user-detail">
      <div class="row" >
        <%- include('./userDetailTab', type); %>
        <div class="col-md-9 border-right px-5">
          <!-- breadcrumb -->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item active" aria-current="page">Thông tin cá nhân</li>
            </ol>
          </nav>

          <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5"
            width="150px" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png">
          <span class="font-weight-bold">
            <%= userDetail.name %>
          </span>
          <span class="text-black-50">
            <%= userDetail.email %>
          </span>

          <span class="text-black-50 font-weight-bolder" style="font-size: 24px;">
            Số dư: <%= userDetail.amount %> VNĐ
          </span>
        </div>
          <div class="p-3 py-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h4 class="text-right">Thông tin tài khoản</h4>
            </div>
            <div class="row mt-3">
              <div class="col-md-12"><label class="labels">Số điện thoại</label><input type="text" class="form-control"
                  disabled value=<%=userDetail.phone %>>
              </div>
              <div class="col-md-12"><label class="labels">Địa chỉ</label><input type="text" class="form-control"
                  disabled value=<%=userDetail.address %>>
              </div>
              <div class="col-md-12"><label class="labels">Ngày sinh</label><input type="text" class="form-control"
                  disabled value=<%=userDetail.birthday %>>
              </div>
              <% if (userDetail.status===3) { %>
                <div class="row changeUserIdentityFrame mb-3">
                  <div class="col-md-6" style="margin-top: 15px;">
                    <label class="labels">Chứng minh mặt trước</label>
                    <div>
                      <img src="<%= 'data:image/jpeg;base64, ' + userDetail.front_identity_card %>" width="250" height="250"/>
                    </div>
                  </div>

                  <div class="col-md-6" style="margin-top: 15px;">
                    <label class="labels">Chứng minh mặt sau</label>
                    <div>
                      <img src="<%= 'data:image/jpeg;base64, ' + userDetail.back_identity_card %>" width="250" height="250"/>
                    </div>
                  </div>

                  <div class="col-md-12 mt-2 mb-2 d-flex justify-content-center">
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal"
                      data-target="#updateIdentityModal">Bổ sung thông tin</button>
                  </div>
                </div>
                <%} else { %>
                  <div></div>
                  <% } %>

                    <div class="col-md-12">
                      <label class="labels">Trạng thái</label>
                      <div class="d-flex align-items-center">
                        <div>
                          <% switch (userDetail.status) { case 0 : %>
                            <div class="user-status"
                              style="background-color: #f6fc9d; padding: 5px; border-radius: 8px; width: fit-content;">
                              Đang chờ xác minh</div>
                            <% break; case 1 : %>
                              <div class="user-status"
                                style="background-color: #4eed7b; padding: 5px; border-radius: 8px; width: fit-content;">
                                Đã xác minh</div>
                              <% break; case 2 : %>
                                <div class="user-status"
                                  style="background-color: #f75423; padding: 5px; border-radius: 8px; color: white; width: fit-content;">
                                  Đã vô hiệu hoá</div>
                                <% break; case 3 : %>
                                  <div class="user-status"
                                    style="background-color: #4df3ff; padding: 5px; border-radius: 8px; width: fit-content;">
                                    Chờ cập nhật</div>
                                  <% break; } %>

                        </div>
                      </div>
                    </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div style="height:50px"></div>
    <%- include('./footer'); %>

    <div class="modal fade" id="updateIdentityModal" data-backdrop="static" data-keyboard="false" tabindex="-1"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Cập nhật thông tin CMND</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="d-flex flex-row align-items-center">
              <div class="form-group" style="width: 100%;">
                <label for="updateFrontcmnd">CMND mặt trước:</label>
                <input type="file" class="form-control" id="updateFrontcmnd">
              </div>
            </div>

            <div class="validation" id="validationUpdateFrontcmnd"><span></span></div>

            <div class="d-flex flex-row align-items-center">
              <div class="form-group" style="width: 100%;">
                <label for="updateBackcmnd">CMND mặt sau:</label>
                <input type="file" class="form-control" id="updateBackcmnd">
              </div>
            </div>

            <div class="validation" id="validationUpdateBackcmnd"><span></span></div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button type="button" class="btn btn-primary" id='userUpdateIdentityModal'>Cập nhật</button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="userUpdateIdentityConfirmModal" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Xác nhận thao tác</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Bạn chắc chắn cập nhật lại trạng thái cho tài khoản người dùng?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button type="button" class="btn btn-primary" id='confirmChangeUserIdentity'>Xác nhận</button>
          </div>
        </div>
      </div>
    </div>

  </div>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
    crossorigin="anonymous"></script>
  <script src="/js/page.js" type="text/javascript"></script>
</body>

</html>