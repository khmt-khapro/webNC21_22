<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>WEB VÍ ĐIỆN TỬ</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Trang quản lí</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body data-spy="scroll" data-target="#myScrollspy">
  <div class="user-home-page">
    <%- include('./menu'); %>
      <!-- user detail-->
      <div class=" rounded bg-white mt-5 mb-5 admin-user-detail">
        <div class="row">
          <%- include('./userDetailTab', type); %>
            <div class="col-md-9 border-right px-5">
              <!-- breadcrumb -->
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item active" aria-current="page">Lịch sử giao dịch</li>
                </ol>
              </nav>

              <div class="text-center font-weight-bold" style="font-size: 30px;">LỊCH SỬ GIAO DỊCH</div>
              <% for(var i=0; i < userTransaction.length; i++) { %>
                <%if ((userTransaction[i].transaction_status === 1 && userTransaction[i].transaction_type==='receive' ) ||
                  userTransaction[i].transaction_type !='receive' ) { %>
                  <div style="border: 1px solid #EAECF0; border-radius: 8px; cursor: pointer;"
                    class="px-5 py-2 d-flex justify-content-between align-items-center"
                    onclick="switchUserTransactionDetail('<%= userTransaction[i].transaction_id %>')">
                    <div>
                      <div class="font-weight-bold">
                        <span class="mr-2"><i class="fa fa-money" aria-hidden="true"
                            style="color: cadetblue;"></i></span>
                        <% switch (userTransaction[i].transaction_type) { case 'withdraw' : %>
                          Rút tiền
                          <% break; case 'recharge' : %>
                            Nạp tiền
                            <% break; case 'transfer' : %>
                              Chuyển tiền
                              <% break; case 'receive' : %>
                                Nhận tiền
                                <% break; } %>
                                  <span>qua ví</span>
                      </div>
                      <div class="d-flex justify-content-start align-items-center">
                        <div style="font-size: 12px;">Ngày: <%= userTransaction[i].transaction_time %>
                        </div>
                        <div class="ml-5"><span class="font-weight-bold">
                            <%= userTransaction[i].money_transaction %>
                          </span>
                        </div>
                      </div>
                    </div>
                    <div>
                      <% switch (userTransaction[i].transaction_status) { case 1 : %>
                        <div class="py-1 text-center" style="background-color: #007BFF; color: white; width: 150px;">Đã
                          hoàn
                          thành</div>
                        <% break; 
                        case 0 : %>
                          <div class="py-1 text-center" style="background-color: greenyellow; width: 150px;">Đang chờ
                            xác
                            nhận</div>
                          <% break; 

                          case 2 : %>
                          <div class="py-1 text-center" style="background-color: red; color: white; width: 150px;">
                            Đã huỷ</div>
                          <% break; 
                      } %>
                    </div>
                  </div>
                  <% } %>
                <% } %>
            </div>
        </div>
      </div>
      <div style="height:50px"></div>
      <%- include('./footer'); %>
  </div>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
    crossorigin="anonymous"></script>
  <script src="/js/page.js" type="text/javascript"></script>
</body>

</html>