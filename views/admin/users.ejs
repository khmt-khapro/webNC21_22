<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Trang quản lí</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="admin-page-layout">
    <%- include('./menu'); %>
      <div id="main-content">
        <div id="header">
          <div class="header-left float-left">
            <i id="toggle-left-menu" class="fa fa-bars"></i>
          </div>
          <div class="header-right float-right">
            <i class="ion-ios-people"></i>
          </div>
        </div>

        <div id="page-container">
          <!-- breadcrumb -->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item active" aria-current="page">Tài khoản người dùng</li>
            </ol>
          </nav>

          <!--Tab-->

          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class='<%= Number(status) === -1 ? 'nav-link active' : 'nav-link' %>' id="homeTabStatusAll" data-toggle="tab" role="tab" aria-controls="home" style="cursor: pointer;"
                aria-selected="true"><%='Tất cả'%></a>
            </li>
            <li class="nav-item">
              <a class='<%= Number(status) === 0 ? 'nav-link active' : 'nav-link' %>' id="homeTabStatusConfirming" data-toggle="tab" role="tab" aria-controls="home" style="cursor: pointer;"
                aria-selected="true"><%='Đang chờ kích hoạt'%></a>
            </li>
            <li class="nav-item">
              <a class='<%= Number(status) === 1 ? 'nav-link active' : 'nav-link' %>' id="homeTabStatusConfirm" data-toggle="tab" role="tab" aria-controls="profile" style="cursor: pointer;"
                aria-selected="false"><%='Đã kích hoạt'%></a>
            </li>
            <li class="nav-item">
              <a class='<%= Number(status) === 2 ? 'nav-link active' : 'nav-link' %>' id="homeTabStatusClock" data-toggle="tab" role="tab" aria-controls="contact" style="cursor: pointer;"
                aria-selected="false"><%='Vô hiệu hoá'%></a>
            </li>
            <li class="nav-item">
              <a class='<%= Number(status) === 3 ? 'nav-link active' : 'nav-link' %>' id="homeTabStatusUpdateInfo" data-toggle="tab" role="tab" aria-controls="contact" style="cursor: pointer;"
                aria-selected="false"><%='Cập nhật thông tin'%></a>
            </li>
            <li class="nav-item">
              <a class='<%= Number(status) === 4 ? 'nav-link active' : 'nav-link' %>' id="homeTabStatusAlwayClock" data-toggle="tab" role="tab" aria-controls="contact" style="cursor: pointer;"
                aria-selected="false"><%='Khoá vô thời hạn'%></a>
            </li>
          </ul>

          <!-- table -->
          <div style="margin-top: 20px;">

            <% if(Number(status) < 4){ %>
              <table class="table">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Ngày tháng năm sinh</th>
                    <th scope="col">Số điện thoại</th>
                    <th scope="col">Email</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < listUser.length; i++) { %>
                    <tr>
                      <td>
                        <%= i + 1 %>
                      </td>
                      <td>
                        <%= listUser[i].name %>
                      </td>
                      <td>
                        <%= listUser[i].birthday %>
                      </td>
                      <td>
                        <%= listUser[i].phone %>
                      </td>
                      <td>
                        <%= listUser[i].email %>
                      </td>
                      <td>
                        <%= listUser[i].address %>
                      </td>
                      <td>
                        <% switch (listUser[i].status) { case 0 : %>
                          <div style="background-color: #f6fc9d; padding: 5px; border-radius: 8px;">Đang chờ xác minh
                          </div>
                          <% break; case 1 : %>
                            <div style="background-color: #4eed7b; padding: 5px; border-radius: 8px;">Đã xác minh</div>
                            <% break; case 2 : %>
                              <div style="background-color: #f75423; padding: 5px; border-radius: 8px; color: white;">Đã
                                vô hiệu hoá</div>
                              <% break; case 3 : %>
                                <div style="background-color: #4df3ff; padding: 5px; border-radius: 8px;">Chờ cập nhật
                                </div>
                                <% break; } %>
                      </td>
                      <td style="text-align: center; cursor: pointer;">
                        <a href=<%='/admin/users/' + listUser[i].user_id %>>
                          <i class="fa fa-eye" aria-hidden="true"></i>
                        </a>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
            <% } else{ %>  
              <table class="table" id='userClockTable'>
                <thead class="thead-light">
                  <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Ngày tháng năm sinh</th>
                    <th scope="col">Số điện thoại</th>
                    <th scope="col">Email</th>
                    <th scope="col">Ngày khoá</th>
                    <th scope="col">Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < listUser.length; i++) { %>
                    <tr id='<%= 'userClock_' + listUser[i].user_id %>'>
                      <td>
                        <%= i + 1 %>
                      </td>
                      <td>
                        <%= listUser[i].name %>
                      </td>
                      <td>
                        <%= listUser[i].birthday %>
                      </td>
                      <td>
                        <%= listUser[i].phone %>
                      </td>
                      <td>
                        <%= listUser[i].email %>
                      </td>
                      <td>
                        <%= listUser[i].clock_time %>
                      </td>
                      <td style="text-align: center; cursor: pointer;">
                        <button onclick="changeUserStatus(value)" style="color: white; background: #109AED; border-color: #109AED " value=<%= listUser[i].user_id %>>
                          Mở khoá
                        </button>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
           <% } %>
          </div>
        </div>
      </div>

      <div class="modal fade" id="unclockUserConfirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Xác nhận thao tác</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Bạn chắc chắn muốn mở khoá cho người dùng này
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
              <button type="button" class="btn btn-primary" id='confirmUnclockUser'>Xác nhận</button>
            </div>
          </div>
        </div>
      </div>
  </div>
  <span id="show-lable">Hello</span>
  </div>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
  <script src="/js/page.js" type="text/javascript"></script>
</body>

</html>